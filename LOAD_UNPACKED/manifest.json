{
  "manifest_version": 3,
  "name": "Jut.su Premium Injector",
  "version": "1.0",
  "description": "Встраивает премиум видео прямо в плеер jut.su",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://jut.su/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Активировать премиум видео"
  },
  "content_scripts": [
    {
      "matches": ["https://jut.su/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
